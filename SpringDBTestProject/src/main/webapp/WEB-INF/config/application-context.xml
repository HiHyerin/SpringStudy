<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	<!-- AOP 설정 -->
	<!-- 사용자 정의 클래스 메모리 할당 요청 : 패키지 단위로 등록-->
	<context:component-scan base-package="com.sist.*"/>
	<!-- 
	 @Component : 일반 클래스(MainClass, ~Manager..)
	 @Repository': DAO(저장소)
	 @Service : DAO여러개를 동시에
	 @Controller : Model 클래스(요청을 받아서 응답까지) = 파일명 전송
	 	초기에 @ResponseBody에서 승격
	 @RestController : Model클래스 -> front와 연결(일반 문자열, JSON)
	 @ControllerAdvice : 공통으로 적용되는 예외처리
 	 @Configuration : xml 대신 자바로 환경설정 (보안 = Spring5에서 적극 지원)
 	 클래스 위에 설정하면 메모리 할당을 요청하는 것(new)
	 -->
	 
	 <!-- 데이터 베이스 설정 -->
	 <!-- 데이터 베이스 정보 설정 -->
	 <bean id = "ds" class="org.apache.commons.dbcp.BasicDataSource"
	 	p:driverClassName = "oracle.jdbc.driver.OracleDriver"
	 	p:url = "jdbc:oracle:thin:@localhost:1521:XE"
	 	p:username="hr"
	 	p:password="happy"
	 />
	 
	 <!--  설정된 정보를 이용해서 데이터베이스 연결 -->
	 <bean id="ssf" class="org.mybatis.spring.SqlSessionFactoryBean"
	 	p:dataSource-ref="ds"
	 />
	 
	 
	 <!-- 인터페이스(Mapper)를 구현 -->
	 <bean id="mapper" class="org.mybatis.spring.mapper.MapperFactoryBean"
	 	p:sqlSessionFactory-ref="ssf"
	 	p:mapperInterface="com.sist.mapper.EmpMapper"
	 />
	 <!-- View 설정 : jsp를 찾아서 request를 전송하는 클래스 -->
	 <bean id = "viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver"
	 	p:prefix="/"
	 	p:suffix=".jsp"
	 />
</beans>
